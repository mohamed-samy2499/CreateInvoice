@model Item
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<br />
<br />
<form asp-action="Create" asp-controller="Item" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Price"></label>
        <input type="number" class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Add" />
    <a asp-action="Index" class="btn btn-light">Return to All Items Page</a>
</form>

