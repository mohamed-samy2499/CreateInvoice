
@model IEnumerable<InvoiceViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>Invoices</h1>

<br />

<a asp-action="Create" class="btn btn-primary" >Create new Invoice</a>
<br />
<br />
@if(Model?.Count()> 0)
{
    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(invoice => invoice.InvoiceNo)</th>
                <th>@Html.DisplayNameFor(invoice => invoice.Date)</th>
                <th>@Html.DisplayNameFor(invoice => invoice.Total)</th>
                <th>@Html.DisplayNameFor(invoice => invoice.Taxes)</th>
                <th>@Html.DisplayNameFor(invoice => invoice.Net)</th>
                <th>@Html.DisplayNameFor(invoice => invoice.Store)</th>

                @*<th>@Html.DisplayNameFor(M => M.EnrollDate)</th>*@

                <th>Details</th>
            </tr>
        </thead>
                <tbody>
            @foreach (var item in Model)
           {
                <tr>
                    <td>@item.InvoiceNo</td>
                    <td>@item.Date.</td>
                    <td>@item.Total.</td>
                    <td>@item.Taxes.</td>
                    <td>@item.Net.</td>
                    <td>@item.Store?.Name.</td>

                    <td>
                        <a  class = "btn btn-info" asp-action="Details" asp-controller = "Invoice" asp-route-id="@item.Id">
                            <i class = "fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a  class = "btn btn-success" asp-action="Edit" asp-controller = "Invoice" asp-route-id="@item.Id">
                            <i class = "fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a  class = "btn btn-danger" asp-action="Delete" asp-controller = "Invoice" asp-route-id="@item.Id">
                            <i class = "fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
                
           }
        </tbody>
    </table>
    
}
else
{
    <div class="alert alert-warning">
        <h3 >No Data Found!</h3>
    </div>
}