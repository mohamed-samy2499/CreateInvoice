@model IEnumerable<Store>
@{
    ViewData["Title"] = "Index";
}

<h1>Stores</h1>

<br />

<a asp-action="Create" class="btn btn-primary" >Add new Store</a>
<br />
<br />
@if(Model?.Count()> 0)
{
    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M => M.Name)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
                <tbody>
            @foreach (var item in Model)
           {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a  class = "btn btn-info" asp-action="Details" asp-controller = "Store" asp-route-id="@item.Id">
                            <i class = "fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a  class = "btn btn-success" asp-action="Edit" asp-controller = "Store" asp-route-id="@item.Id">
                            <i class = "fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a  class = "btn btn-danger" asp-action="Delete" asp-controller = "Store" asp-route-id="@item.Id">
                            <i class = "fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
                
           }
        </tbody>
    </table>
    
}
else
{
    <div class="alert alert-warning">
        <h3 >No Data Found!</h3>
    </div>
}